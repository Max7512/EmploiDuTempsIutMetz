<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/darkBackgroundSecondary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/lundi"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/mardi"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/mercredi"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/jeudi"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/vendredi"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:gravity="center_horizontal"
            android:tag="day"
            android:text="@string/samedi"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>